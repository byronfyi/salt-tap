---
import { Icon } from 'astro-icon';
import ToggleMenu from '~/components/core/ToggleMenu.astro';
---

<header class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 md:backdrop-blur-sm">
	<div class="container mx-auto w-full p-3">
		<div class="grid gap-4 grid-cols-3 items-center relative z-40">
			<div>
				<ToggleMenu />
			</div>

			<div class="flex justify-center">
				<a href="/">
					<img src="./salt-logo.png" alt="" width="70" height="42" class="mx-auto">
				</a>
			</div>

			<div class="text-right">
				<a href="#" class="font-medium sm:border-2 border-black rounded sm:shadow p-2.5 sm:px-4 lg:px-6 sm:py-2 md:hover:text-white md:hover:bg-gray-900 transition">Book Now</a>
			</div>
		</div>

		<nav class="flex items-center justify-center w-full md:w-auto hidden text-gray-900 h-screen mt-[-68px]" aria-label="Main navigation" id="menu">
			<ul class="inline-flex justify-center items-center flex-col collapse collapsed text-xl relative z-40">
				<li>
					<a class="tap-1 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-1.png" href="#">SALT BAR + KITCHEN</a>
				</li>
				<li>
					<a class="tap-2 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-2.png" href="#">SALT TAPROOM</a>
				</li>
				<li>
					<a class="tap-3 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-3.png" href="#">SALT LEEDS CITY</a>
				</li>
				<li>
					<a class="tap-4 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-4.png" href="#">SALT DEPTFORD</a>
				</li>
				<li>
					<a class="tap-4 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-5.png" href="#">SALT WOOLWICH</a>
				</li>
				<li>
					<a class="tap-4 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-6.png" href="#">SALT SHEFFIELD</a>
				</li>
				<li>
					<a class="tap-4 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-7.png" href="#">SALT GRANARY WHARF</a>
				</li>
				<li>
					<a class="tap-4 font-bold text-base md:text-2xl hover:text-white hover:z-30 px-4 py-3 md:py-5 inline-block transition" data-image="tap-8.png" href="#">SALT BOSTON SPA</a>
				</li>
			</ul>

			<div class="cursor custom-cursor" style="background-color: rgba(250, 181, 0, 0.72); background-blend-mode: multiply;"></div>
		</nav>
	</div>
</header>
