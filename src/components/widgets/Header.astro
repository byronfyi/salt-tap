---
import { Icon } from 'astro-icon';
import Logo from '~/components/atoms/Logo.astro';
import ToggleMenu from '~/components/core/ToggleMenu.astro';

import { getPermalink, getBlogPermalink, getHomePermalink } from '~/utils/permalinks';
---

<header
	class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 md:backdrop-blur-sm"
>
	<div class="container mx-auto w-full py-3 px-3">
		<div class="grid gap-4 grid-cols-3 items-center">
			<div>
				<ToggleMenu />
			</div>

			<div class="flex justify-center">
				<a href={getHomePermalink()}>
					<img src="./salt-logo.png" alt="" width="70" height="42" class="mx-auto">
				</a>
			</div>

			<div class="text-right">
				<a href="#" class="font-medium border-2 border-black rounded shadow sm:px-4 lg:px-6 sm:py-2 hover:text-white hover:bg-gray-900 transition">Book Now</a>
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden text-gray-900 h-screen"
			aria-label="Main navigation"
			id="menu"
		>
			<ul
				class="flex flex-col pt-8 collapse w-full collapsed text-xl"
			>
				<li>
					<a
						class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Pages</a
					>
				</li>
				<li>
					<a
						class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Resources
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getBlogPermalink()}>Blog</a
					>
				</li>
				<li class="md:hidden">
					<a
						class="font-bold hover:text-gray-900 px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="https://github.com/onwidget/astrowind"
						>Github
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>
